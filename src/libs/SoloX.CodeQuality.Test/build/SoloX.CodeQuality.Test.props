<Project>

  <PropertyGroup>
    <DocumentationFile>$(OutputPath)$(MSBuildProjectName).xml</DocumentationFile>

    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>

    <AnalysisMode>AllEnabledByDefault</AnalysisMode>
    <!--<AnalysisMode>AllDisabledByDefault</AnalysisMode>-->
    <!--<AnalysisMode>Default</AnalysisMode>-->

    <CodeAnalysisTreatWarningsAsErrors>true</CodeAnalysisTreatWarningsAsErrors>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>

    <CodeQualityOverrideEditorConfig>true</CodeQualityOverrideEditorConfig>
    <CodeQualityFieldsUseUnderscorStyle>false</CodeQualityFieldsUseUnderscorStyle>

    <CodeQualityHeaderEnable>true</CodeQualityHeaderEnable>

    <CodeQualityHeaderCompanyName Condition="'$(Authors)' == ''" >(Please define CodeQualityHeaderCompanyName or Authors property)</CodeQualityHeaderCompanyName>
    <CodeQualityHeaderCopyright Condition="'$(Copyright)' == ''" >(Please define CodeQualityHeaderCopyright or Copyright property)</CodeQualityHeaderCopyright>
    <CodeQualityHeaderLicense Condition="'$(PackageLicenseExpression)' == ''" >(Please define CodeQualityHeaderLicense or PackageLicenseExpression property)</CodeQualityHeaderLicense>
    <CodeQualityHeaderLicenseFile>LICENSE</CodeQualityHeaderLicenseFile>

    <CodeQualityHeaderCompanyName Condition="'$(Authors)' != ''" >$(Authors)</CodeQualityHeaderCompanyName>
    <CodeQualityHeaderCopyright Condition="'$(Copyright)' != ''" >$(Copyright)</CodeQualityHeaderCopyright>
    <CodeQualityHeaderLicense Condition="'$(PackageLicenseExpression)' != ''" >$(PackageLicenseExpression)</CodeQualityHeaderLicense>

    <NoWarn>$(NoWarn),CA1014,CS1591,CA1062</NoWarn>

  </PropertyGroup>

  <ItemGroup>

    <GlobalAnalyzerConfigFiles Include="$(MSBuildThisFileDirectory)..\resources\global.editorconfig" />

  </ItemGroup>

</Project>